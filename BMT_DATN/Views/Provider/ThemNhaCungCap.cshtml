
@{
    ViewBag.Title = "ThemNhaCungCap";
    Layout = "~/Views/Shared/layout_admin.cshtml";
}

@using BMT_DATN.Models;

<script src="~/Theme/js/jquery-3.2.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
    });
</script>

@using BMT_DATN.Models;
<div class="admin_content_area">
    <h2>QUẢN LÝ NHÀ CUNG CẤP - THÊM NHÀ CUNG CẤP</h2>
    <div>
        <form class="AdminForm m-md-auto" action="/Provider/AdminThemNhaCungCap" method="post">
            <span class="h4 mb-0">Nhập các thông tin</span>
            <div class="form-group">
                <label for="providerName">Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="providerName" id="providerName" autocomplete="off" required>
            </div>
            <div class="form-group">
                <label for="address">Địa chỉ:</label>
                <input type="text" class="form-control" name="address" id="address" autocomplete="off" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Số điện thoại:</label>
                <input type="tel" class="form-control" name="phoneNumber" id="phoneNumber" autocomplete="off" pattern="[0-9]{10}" required>
            </div>
            
            <div>
                <label style="color:red; font-weight:normal;">@ViewBag.checkDuplicateProviderName</label>
            </div>
            <div>
                <button type="submit" class="ml-auto btn hvr-hover" style="color:#ffffff">Thêm mới</button>
            </div>
        </form>
    </div>
</div>