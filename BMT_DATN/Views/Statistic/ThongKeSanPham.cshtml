                <tbody>
                    @{
                        int stt = 0;
                        foreach (var prod in productsByCategory)
                        {
                            <tr>
                                <td style="text-align:center;">@(stt+1)</td>
                                <td>@prod.TenSanPham</td>
                                @if (prod.SoLuong == 0)
                                { 
                                    <td>@prod.SoLuong (Đã hết)</td>
                                }
                                @if (0 < prod.SoLuong && prod.SoLuong <= 5)
                                { 
                                    <td>@prod.SoLuong (Sắp hết)</td>
                                }
                                @if (prod.SoLuong > 5)
